#include<stdio.h>
int main()
{
    int x,y,t,i,c,j,temp;
    scanf("%d",&t);
    for(i=0;i<t;i++){
        scanf("%d%d",&x,&y);
        c=x-y;
        if(c<2){
            printf("NO\n");
        }
        else if(c==2){
            printf("YES\n");
        }
        else if(c>2&&c%2==0){
            printf("YES\n");
        }
        for(j=1;j<=c;j=j+2){
                temp=c%j;
            }
         if(c>2&&c%2!=0){
                   if(temp=0){
                    printf("YES\n");
                }
                else{
                    printf("NO\n");
                }
            }
        }
    return 0;
}